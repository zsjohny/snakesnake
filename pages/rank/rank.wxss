/* 排行榜页面样式 */
.container {
  padding: 30rpx;
  min-height: 100vh;
}

/* 排行榜标题 */
.rank-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.rank-title {
  display: block;
  font-size: 64rpx;
  font-weight: bold;
  color: #ecf0f1;
  margin-bottom: 10rpx;
}

.rank-subtitle {
  display: block;
  font-size: 28rpx;
  color: #95a5a6;
}

/* 我的排名卡片 */
.my-rank-card {
  margin-bottom: 30rpx;
}

.my-rank-header {
  margin-bottom: 20rpx;
}

.my-rank-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ecf0f1;
}

.my-rank-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.my-rank-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.my-rank-number {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f39c12;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 32rpx;
  color: white;
}

.my-rank-number.top-1 {
  background: linear-gradient(45deg, #ffd700, #ffed4e);
  color: #2c3e50;
}

.my-rank-number.top-2 {
  background: linear-gradient(45deg, #c0c0c0, #e5e5e5);
  color: #2c3e50;
}

.my-rank-number.top-3 {
  background: linear-gradient(45deg, #cd7f32, #daa520);
  color: white;
}

.rank-text {
  font-weight: bold;
}

.my-rank-details {
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.my-rank-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #ecf0f1;
}

.my-rank-score {
  font-size: 28rpx;
  color: #2ecc71;
}

.my-rank-stats {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 20rpx;
}

.stat-item {
  text-align: center;
  padding: 15rpx;
  background: rgba(52, 152, 219, 0.1);
  border-radius: 10rpx;
  border: 2rpx solid rgba(52, 152, 219, 0.3);
}

.stat-number {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #3498db;
  margin-bottom: 5rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #95a5a6;
}

/* 排行榜类型选择 */
.rank-tabs {
  display: flex;
  background: rgba(44, 62, 80, 0.5);
  border-radius: 15rpx;
  padding: 5rpx;
  margin-bottom: 30rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 10rpx;
  border-radius: 10rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: linear-gradient(45deg, #3498db, #2980b9);
  box-shadow: 0 4rpx 15rpx rgba(52, 152, 219, 0.4);
}

.tab-text {
  font-size: 28rpx;
  color: #ecf0f1;
  font-weight: bold;
}

/* 排行榜列表 */
.rank-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  margin-bottom: 30rpx;
}

.rank-item {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 15rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
}

.rank-item:active {
  transform: scale(0.98);
}

.rank-position {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.rank-number {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f39c12;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 24rpx;
}

.rank-number.top-1 {
  background: linear-gradient(45deg, #ffd700, #ffed4e);
  color: #2c3e50;
}

.rank-number.top-2 {
  background: linear-gradient(45deg, #c0c0c0, #e5e5e5);
  color: #2c3e50;
}

.rank-number.top-3 {
  background: linear-gradient(45deg, #cd7f32, #daa520);
  color: white;
}

.rank-medal {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
}

.medal-icon {
  font-size: 24rpx;
}

.rank-player {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.player-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
}

.player-info {
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.player-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #ecf0f1;
}

.player-level {
  font-size: 24rpx;
  color: #95a5a6;
}

.rank-score {
  text-align: center;
  margin-right: 20rpx;
}

.score-number {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #2ecc71;
}

.score-label {
  font-size: 24rpx;
  color: #95a5a6;
}

.rank-details {
  display: flex;
  flex-direction: column;
  gap: 5rpx;
  align-items: flex-end;
}

.detail-text {
  font-size: 22rpx;
  color: #95a5a6;
}

/* 加载更多 */
.load-more {
  text-align: center;
  margin: 30rpx 0;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  display: block;
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  display: block;
  font-size: 36rpx;
  color: #ecf0f1;
  margin-bottom: 10rpx;
}

.empty-subtext {
  display: block;
  font-size: 28rpx;
  color: #95a5a6;
}

/* 排行榜说明 */
.rank-info {
  margin-top: 30rpx;
}

.info-header {
  margin-bottom: 20rpx;
}

.info-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ecf0f1;
}

.info-content {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 15rpx;
  padding: 15rpx;
  background: rgba(44, 62, 80, 0.3);
  border-radius: 10rpx;
}

.info-icon {
  font-size: 32rpx;
  width: 40rpx;
  text-align: center;
}

.info-text {
  font-size: 28rpx;
  color: #ecf0f1;
  flex: 1;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    padding: 20rpx;
  }
  
  .rank-title {
    font-size: 48rpx;
  }
  
  .my-rank-stats {
    grid-template-columns: 1fr;
    gap: 15rpx;
  }
  
  .rank-item {
    flex-direction: column;
    align-items: flex-start;
    gap: 15rpx;
  }
  
  .rank-player {
    width: 100%;
  }
  
  .rank-score {
    align-self: flex-end;
    margin-right: 0;
  }
  
  .rank-details {
    align-self: flex-end;
  }
} 